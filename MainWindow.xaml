<Window x:Class="Practical_task_6_example_1__Stetsenko.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practical_task_6_example_1__Stetsenko"
        mc:Ignorable="d"
        Title="SimpleDataGridSample" Height="180" Width="400">
	<Grid Margin="10">
		<!-- Таблиця DataGrid для відображення списку користувачів -->
		<!-- Ім’я, Відключення автоматичної генерації стовпців, шрифт, фон, контур, розмір шрифту, -->
		<DataGrid Name="dgSimple" AutoGenerateColumns="false" FontFamily="OCR-A BT" Background="#FF80CC9D"
			BorderBrush="#FF537D63" FontSize="16">
			<!-- Визначення користувацьких стовпців -->
			<DataGrid.Columns>
				<!-- Прив'язка до властивості Name у класі User -->
				<DataGridTextColumn Header="Name" Binding="{Binding Name}" />
				<!-- Стовпець з шаблоном, що містить елемент DatePicker для дати народження -->
				<DataGridTemplateColumn Header="Birthday">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<!-- Вбудований вибір дати, прив'язаний до властивості Birthday -->
							<!-- Прив'язка вибраної дати, відсутність рамок -->
							<DatePicker SelectedDate="{Binding Birthday}" BorderThickness="0" />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</Window>

